{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["es2017", "es7", "es6", "dom"], 
    "target": "es5",
    "outDir": "./dist",
    "moduleResolution": "node",
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "src/*"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}